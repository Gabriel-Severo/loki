{
  "name": "@azinformatica/loki",
  "version": "1.6.0",
  "description": "Biblioteca de componentes visuais compartilhados construidos usando vuejs.",
  "main": "src/index.js",
  "private": false,
  "scripts": {
    "deploy": "npm version patch -m 'patch upgrade' && git push && git push --tags && npm publish",
    "lint": "vue-cli-service lint",
    "test": "jest",
    "test:coverage": "jest --collectCoverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azinformatica/loki.git"
  },
  "author": "Charles Viegas",
  "license": "MIT",
  "dependencies": {
    "accounting": "^0.4.1",
    "ajv": "^6.5.3",
    "axios": "^0.19.2",
    "imagesloaded": "^4.1.4",
    "lodash": "^4.17.10",
    "moment-timezone": "^0.5.27",
    "pdfjs-dist": "^1.10.100",
    "scrollmonitor": "^1.2.4",
    "soundex": "^0.2.1",
    "string-mask": "^0.3.0",
    "string-similarity": "^2.0.0",
    "v-money": "^0.8.1",
    "vue": "^2.6.10",
    "vuetify": "^1.5.7",
    "vuex": "^3.0.1",
    "web-pki": "^2.14.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-eslint": "^4.1.2",
    "@vue/cli-service": "^4.1.2",
    "@vue/eslint-config-prettier": "^5.0.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "^6.26.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.0.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^5.0.0",
    "file-loader": "^1.1.4",
    "jest": "^24.0.0",
    "jest-serializer-vue": "^2.0.2",
    "prettier": "^1.19.1",
    "regenerator-runtime": "^0.13.7",
    "vue-jest": "^2.6.0",
    "vue-loader": "^13.0.5",
    "vue-router": "^3.0.1",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^3.10.1"
  },
  "peerDependencies": {
    "axios": "0.19.x",
    "moment-timezone": "0.5.x",
    "pdfjs-dist": "^1.10.100",
    "scrollmonitor": "^1.2.4",
    "web-pki": "^2.14.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "plugins": [
      "jest"
    ],
    "extends": [
      "plugin:vue/essential",
      "plugin:jest/recommended",
      "@vue/prettier"
    ],
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "indent": [
        "error",
        4
      ],
      "max-len": [
        "error",
        {
          "code": 120,
          "tabWidth": 4,
          "ignoreUrls": true
        }
      ],
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "overrides": [
      {
        "files": [
          "**/test/**/*.test.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "semi": false,
    "tabWidth": 4
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "collectCoverageFrom": [
      "**/*.{js,vue}",
      "!**/node_modules/**"
    ],
    "coverageDirectory": ".tmp"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}